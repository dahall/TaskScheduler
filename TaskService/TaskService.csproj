<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net40;net452;netstandard2.0</TargetFrameworks>
    <ProductVersion>9.0.30729</ProductVersion>
    <SchemaVersion>2.0</SchemaVersion>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>Microsoft.Win32.TaskScheduler</RootNamespace>
    <AssemblyName>Microsoft.Win32.TaskScheduler</AssemblyName>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>TaskService.snk</AssemblyOriginatorKeyFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <Optimize>True</Optimize>
  </PropertyGroup>

  <PropertyGroup>
    <DefineConstants Condition=" '$(TargetFramework)' == 'net20' ">NET_20_OR_GREATER</DefineConstants>
    <DefineConstants Condition=" '$(TargetFramework)' == 'net35' ">NET_20_OR_GREATER;NET_35_OR_GREATER</DefineConstants>
    <DefineConstants Condition=" '$(TargetFramework)' == 'net40' ">NET_20_OR_GREATER;NET_35_OR_GREATER;NET_40_OR_GREATER</DefineConstants>
    <DefineConstants Condition=" '$(TargetFramework)' == 'net452' ">NET_20_OR_GREATER;NET_35_OR_GREATER;NET_40_OR_GREATER;NET_45_OR_GREATER</DefineConstants>
    <DefineConstants Condition=" '$(TargetFramework)' == 'netstandard2.0' ">NET_20_OR_GREATER;NET_35_OR_GREATER;NET_40_OR_GREATER;NET_45_OR_GREATER;NETSTANDARD</DefineConstants>
  </PropertyGroup>

  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETFramework' ">
    <PackageReference Include="JetBrains.Annotations" Version="10.4.0" />
    <Reference Include="System" />
    <Reference Include="System.Configuration" />
    <Reference Include="System.Xml" />
  </ItemGroup>


  <ItemGroup Condition=" '$(TargetFrameworkIdentifier)' == '.NETStandard' ">
    <PackageReference Include="JetBrains.Annotations" Version="11.0.0" />
    <PackageReference Include="System.Security.AccessControl" Version="4.4.0" />
    <PackageReference Include="System.Runtime.InteropServices" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\TaskEditor\Native\EnumUtil.cs">
      <Link>Native\EnumUtil.cs</Link>
    </Compile>
  </ItemGroup>
</Project>